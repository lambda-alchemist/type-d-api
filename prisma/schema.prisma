
generator client {
	provider        = "prisma-client-js"
	output          = "./client"
	previewFeatures = ["deno"]
}

datasource db {
	provider          = "sqlite"
	url               = "file:./../sql.db"
	shadowDatabaseUrl = "file:./../alt.db"
}

model User {
	id         String   @id
	username   String
	email      String   @unique
	password   String
	updated_at DateTime @default(now()) @updatedAt
	created_at DateTime @default(now())
	task       Task[]
}

model Task {
	id         String   @id
	user_id    String
	name       String
	stat       Boolean  @default(false)
	updated_at DateTime @default(now()) @updatedAt
	created_at DateTime @default(now())
	user       User     @relation(fields: [user_id], references: [id])
}
