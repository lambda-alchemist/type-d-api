{
	"importMap": "import_map.json",
	"lock": true,
	"test":  { "files": { "include": ["src/"]}},
	"bench": { "files": { "include": ["src/"]}},
	"lint":  { "files": { "include": ["src/"]}},
	"fmt":   { "files": { "include": ["src/"]},
		"options": {
			"indentWidth": 4,
			"lineWidth": 80,
			"proseWrap": "always",
			"singleQuote": false,
			"useTabs": true
		}
	},
	"compilerOptions": {
		
	},
	"tasks": {
		"esm:add": "deno run -A https://esm.sh/v102 add",
		"esm:update": "deno run -A https://esm.sh/v102 update",
		"esm:remove": "deno run -A https://esm.sh/v102 remove"
	}
}
